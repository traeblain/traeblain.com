<!DOCTYPE html>
<html lang="en">
<head>
  {% block starthead %}{% endblock starthead %}
	<meta http-equiv="Content-Type" content="text/html" charset="{{ resource.meta.charset }}" />
  <meta http-equiv="X-UA-Compatible" content="{{ resource.meta.compatibility }}">
	<title>{% block title %}{{ resource.meta.title }}{% endblock %}</title>
  <meta name="description" content="{{ resource.meta.description }}">
  <meta name="author" content="{{ resource.meta.author }}">
  {% block favicons %}
  <link rel="shortcut icon" href="{{ media_url('/favicon.ico') }}">
  <link rel="apple-touch-icon" href="{{ media_url('/apple-touch-icon.png') }}">
  {% endblock favicons %}
	{% block css %}
  <link rel="stylesheet" href="{{ media_url('css/reset.css') }}">
  <link rel="stylesheet" type="text/css" href="{{ media_url('css/site.css') }}">
  {% if not site.config.mode == "production" -%}
    <link rel="stylesheet" type="text/less" href="{{ media_url('css/site.less') }}">
    <script src="{{ media_url('js/libs/less.js') }}"></script>
  {%- endif %}
  <!--[if IE]>
        <link rel="stylesheet" type="text/css" href="{{ media_url('css/ie.css') }}" />
  <![endif]-->
  <link rel="stylesheet" href="{{ media_url('css/syntax.css') }}">
  <link href='http://fonts.googleapis.com/css?family=News+Cycle' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Arimo:400,700,700italic' rel='stylesheet' type='text/css' />
  {% endblock css %}

	{% block headjs %}
    <script src="{{ media_url('js/libs/modernizr-1.7.min.js') }}"></script>
  {% endblock headjs %}
  <style>
    html { background-color: #fff; }
  </style>
  
  {% block endhead %}{% endblock endhead %}
</head>

<body class="{{ resource.meta.id if resource.meta.id else resource.slug }}">
{% block content %}
  {% block container %}
	<header role="banner">
    {% block header -%}
    <div class="masthead">
      <span class="main_head"><a href="http://traeblain.com/" class="title_head"><span>Trae </span>Blain</a></span>
      <span class="sub_head">Engineer. Cyclist. Father. Sexy. Sarcastic. Geek.</a>
    </div>
    {%- endblock %}
    <nav class="topnav">
    <ul>
        <li><a title="Blog" class="button black blog" href="http://blog.traeblain.com/">Blog</a></li>
        <li><a title="About Trae Blain" class="button black active about" href="http://blog.traeblain.com/about">About</a></li>
        <li><a title="RSS Feed" class="button black feed" href="http://blog.traeblain.com/atom.xml">Feed</a></li>
        <li class="search-link"><span class="traefont">s</span></li>
    </ul>
    </nav>
    <li class="search"><form id="searchbox" name="searchbox" method="get" action="http://blog.traeblain.com/search.html"><div><input id="searchtext" name="q" type="text" /><input id="searchbutton" type="submit" value="s" class="traefont" /></div></form></li>
  </header>
  
  <section id="main" role="main">
  <div class="homelogo"><img src="/media/images/tbbackground.svg" 
title="TB Background" /></div>
  {% block main %}
  {% endblock main %}
  </section>
  
  {% endblock container %}
  <footer>
    &copy; Trae Blain, All Rights Reserved. Powered by <a 
href="http://blog.traeblain.com/mountaindew">Diet Mountain Dew</a>, <a 
href="http://blog.traeblain.com/pretzels">Pretzels</a>, and <a 
href="http://hyde.github.com/">Hyde</a>.<br />
    <span>except for the stuff that isn't...</span>
  </footer>
{% endblock content%}

{% block js %}
  <!-- Javascript at the bottom for fast page loading -->
  {% block jquery %}
  <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if necessary -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js"></script>
  <script>window.jQuery || document.write('<script src="{{ media_url('js/libs/jquery-1.5.1.min.js') }}"><\/script>')</script>
  <script src="{{ media_url('js/jquery.timeago.js') }}" type="text/javascript"></script>
  <script src="{{ media_url('js/tmb.js') }}" type="text/javascript"></script>
  {% endblock jquery %}

  {% block scripts %}
  <!-- Place this render call where appropriate -->
  <script type="text/javascript">
    (function() {
      var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
      po.src = 'https://apis.google.com/js/plusone.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
    })(); 
  </script>
  {% endblock scripts %}




  {% block analytics %}
  {% include "analytics.j2" %}
  {% endblock analytics %}

{% endblock js %}
</body>
</html>
